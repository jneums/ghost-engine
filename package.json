{
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "name": "ghost-engine",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "prebuild": "npm run prebuild --workspaces --if-present",
    "pretest": "npm run prebuild --workspaces --if-present",
    "start": "npm start --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "deploy:ic": "dfx deploy --network ic --output-env-file .env.production",
    "deploy:local": "dfx deploy --output-env-file .env.local"
  },
  "type": "module",
  "workspaces": [
    "src/ghost-engine-frontend"
  ]
}
