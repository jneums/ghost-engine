{
  "name": "ghost-engine-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && dfx canister create ghost-engine-backend && dfx generate ghost-engine-backend && dfx deploy",
    "start": "vite --port 3000",
    "prebuild": "dfx generate && rsync -a ../declarations/ src/declarations",
    "build": "tsc && vite build",
    "format": "prettier --write \"src/**/*.{json,js,jsx,ts,tsx,css,scss}\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/node": "^22.5.5",
    "@types/three": "^0.168.0",
    "cross-fetch": "^3.1.6",
    "dotenv": "^16.3.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "@dfinity/agent": "^2.0.0",
    "@dfinity/auth-client": "^2.1.1",
    "@dfinity/candid": "^2.0.0",
    "@dfinity/principal": "^2.0.0",
    "ic-websocket-js": "^0.4.0",
    "lil-gui": "^0.19.2",
    "three": "^0.168.0"
  }
}
